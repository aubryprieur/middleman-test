<%# Set the title %>
<% title = current_page.data.title if title.blank? %>

<header class="text-center">
  <%#Check if it's the homepage %>
  <% if current_page.url == '/' %>
    <div class="wrapper-home-page" style="background-image: url('images/backgrounds/<%= current_page.data.hero_image %>');">
      <%= image_tag "/images/logo/logo-home.png", srcset: "/images/logo/logo-home.png 1x, /images/logo/logo-home@2x.png 2x", class: "header-logo", alt: "No Wifi Summercamp, camp de vacances en plein air" %>
      <div class="header-content">
        <h1 class="header-infos"><%= title %></h1>
        <h2 class="header-slogan"><%= current_page.data.slogan_sup %></h2>
        <h2 class="header-title"><%= current_page.data.slogan %></h2>
      </div>
    </div>
  <% else %>
  <div class="wrapper" style="background-image: url('images/backgrounds/<%= current_page.data.hero_image %>');">
    <h1 class="header-title-2"><%= title %></h1>
  </div>
  <% end %>
</header>
