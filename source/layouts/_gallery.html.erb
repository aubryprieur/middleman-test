<div class="gallery">
  <div class="container">
    <div class="row">
      <% gallery.each do |picture| %>
        <div class="col-xs-6 col-md-3 gallery-item">
          <% link_to "/images/galleries/#{picture}" do %>
            <%= image_tag "/images/galleries/thumbs/#{picture}", class:"img-responsive" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
